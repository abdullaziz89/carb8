{
  "expo": {
    "scheme": "carb8app",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splashscreen.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "web": {
      "favicon": "./assets/icon.png",
      "bundler": "metro"
    },
    "name": "Carb8",
    "slug": "carb8",
    "android": {
      "versionCode": 4,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "softwareKeyboardLayoutMode": "pan",
      "package": "com.ideveloprs.carb8",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "carb8.page.link"
            },
            {
              "scheme": "https",
              "host": "carb8app.page.link"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.DOWNLOAD_WITHOUT_NOTIFICATION"
      ]
    },
    "ios": {
      "buildNumber": "1.0.2",
      "bundleIdentifier": "com.ideveloprs.carb8",
      "supportsTablet": false,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app requires access to your location to function properly.",
        "NSLocationAlwaysUsageDescription": "This app requires access to your location to function properly.",
        "UIViewControllerBasedStatusBarAppearance": "yes",
        "ExpoLocalization_supportsRTL": true,
        "ExpoFont": {
          "fonts": [
            {
              "asset": "./assets/fonts/Inter-Regular.ttf",
              "fontWeight": "400",
              "fontStyle": "normal"
            },
            {
              "asset": "./assets/fonts/Inter-Medium.ttf",
              "fontWeight": "500",
              "fontStyle": "normal"
            },
            {
              "asset": "./assets/fonts/Inter-SemiBold.ttf",
              "fontWeight": "600",
              "fontStyle": "normal"
            },
            {
              "asset": "./assets/fonts/Inter-Bold.ttf",
              "fontWeight": "700",
              "fontStyle": "normal"
            }
          ]
        },
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSExceptionDomains": {
            "carb8.page.link": {
              "NSIncludesSubdomains": true,
              "NSExceptionAllowsInsecureHTTPLoads": true
            },
            "carb8app.page.link": {
              "NSIncludesSubdomains": true,
              "NSExceptionAllowsInsecureHTTPLoads": true
            }
          }
        }
      },
      "associatedDomains": [
        "applinks:carb8.page.link",
        "applinks:carb8.page.link"
      ]
    },
    "plugins": [
      "expo-router",
      "expo-localization",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos, to set your food profile logo and header image."
        }
      ],
      [
        "onesignal-expo-plugin",
        {
          "mode": "development"
        }
      ],
      "expo-font",
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 33,
            "targetSdkVersion": 33,
            "minSdkVersion": 21
          },
          "ios": {
            "deploymentTarget": "17.0"
          }
        }
      ]
    ],
    "extra": {
      "supportsRTL": true,
      "oneSignalAppId": "41309cd4-f41f-4e4f-b8db-273628a801b6",
      "host": {
        "dev": "https://carb8-kw.com",
        "prod": "https://carb8-kw.com"
      },
      "eas": {
        "build": {
          "experimental": {
            "ios": {
              "appExtensions": [
                {
                  "targetName": "OneSignalNotificationServiceExtension",
                  "bundleIdentifier": "com.ideveloprs.carb8.OneSignalNotificationServiceExtension",
                  "entitlements": {
                    "com.apple.security.application-groups": [
                      "group.com.ideveloprs.carb8.onesignal"
                    ]
                  }
                }
              ]
            }
          }
        },
        "projectId": "440a7de2-3698-43cf-9df8-334b54f7987c"
      }
    },
    "owner": "abdullaziz89"
  }
}
